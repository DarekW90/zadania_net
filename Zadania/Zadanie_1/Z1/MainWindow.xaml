<Window x:Class="Z1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoGłówne" Height="350" Width="600">
    <Grid>
        <WrapPanel Orientation="Horizontal" VerticalAlignment="Top" Background="LightGray" Margin="87,0,0,0">
            <Button Content="Guzik 1" Style="{StaticResource WrapPanelButtonStyle}"/>
            <Button Content="Guzik 2" Style="{StaticResource WrapPanelButtonStyle}"/>
            <Button Content="Guzik 3" Style="{StaticResource WrapPanelButtonStyle}"/>
            <Button Content="Guzik 4" Style="{StaticResource WrapPanelButtonStyle}"/>
        </WrapPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Background="LightGray" Margin="0,39,0,0">
            <Label Content="Grupa 1" Style="{StaticResource StandardLabelStyle}"/>
            <Label Content="Grupa 2" Style="{StaticResource SpecialLabelStyle}"/>
            <Label Content="Grupa 3" Style="{StaticResource StandardLabelStyle}"/>
        </StackPanel>
    </Grid>
</Window>
